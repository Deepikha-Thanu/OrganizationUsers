<Page x:ConnectionId='1'
    x:Class="OrganizationUser.AllUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OrganizationUser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:OrganizationUser.Model"
    mc:Ignorable="d"
    Background="{ThemeResource SystemBaseLowColor}">
    <Grid>
        <TextBlock x:ConnectionId='2' x:Name="SearchResult" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" FontSize="20"></TextBlock>
        <GridView x:ConnectionId='3' Name="AllUserGridView"                                            Margin="10" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent" SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate  x:Name="AllDataTemplate"                         >
                    <local:OrgUserControl x:ConnectionId='5' x:Name="OrgUsersUC" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                                Margin="20"></local:OrgUserControl>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

