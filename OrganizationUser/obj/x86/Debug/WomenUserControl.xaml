            <Rectangle x:ConnectionId='3' Margin="0,10,0,0" x:Name="TransRectangle" Fill="Transparent" Grid.RowSpan="4" Canvas.ZIndex="0"></Rectangle>
            <Image x:ConnectionId='4' x:Name="EmployeeImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Canvas.ZIndex="10"                                               Width="100" Height="100" Margin="0,10,0,10"></Image>
            <Grid x:ConnectionId='5' x:Name="DataGrid"  Grid.Row="1" Canvas.ZIndex="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='15' TextTrimming="CharacterEllipsis" FontSize="18" FontWeight="Black"                                             Margin="10,0,10,0" HorizontalAlignment="Left"                                                              ></TextBlock>
                <Ellipse VerticalAlignment="Center" Grid.Column="1" Fill="Gray" Height="5" Width="5" Margin="10,0,0,0"></Ellipse>
                <TextBlock x:ConnectionId='16' VerticalAlignment="Center" Grid.Column="2" Name="StatusText"                                                                           FontSize="16"                                                       FontWeight="SemiBold" Margin="10,0,10,0"></TextBlock>
            </Grid>
            <TextBlock x:ConnectionId='6' Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" x:Name="EmailIDText" Canvas.ZIndex="10" TextTrimming="CharacterEllipsis" Grid.Row="2" FontSize="14"                                             Margin="10,0,10,7"                                                              ></TextBlock>
            <TextBlock x:ConnectionId='7' Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Canvas.ZIndex="10" TextTrimming="CharacterEllipsis" Name="DepartmentText" FontSize="16" Grid.Row="3"                                                   Margin="10,0,10,5"                                                                    ></TextBlock>
            <TextBlock x:ConnectionId='8' Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Canvas.ZIndex="10" TextTrimming="CharacterEllipsis" Name="ReportingToText" FontSize="16" Grid.Row="4"                                                    Margin="10,0,10,5"                                                                    ></TextBlock>
            <TextBlock x:ConnectionId='9' Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Canvas.ZIndex="10" TextTrimming="CharacterEllipsis" Name="DesignationText" Grid.Row="5" FontSize="14"                                                    Margin="10,0,0,10"                                                                     ></TextBlock>
            <StackPanel x:ConnectionId='10' Name="TaskStackPanel" Orientation="Horizontal" Grid.Row="3" Grid.RowSpan="3" Visibility="Collapsed" Background="{ThemeResource SystemChromeMediumColor}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Button x:ConnectionId='11' Style="{StaticResource HoverButtonStyle}" x:Name="CallButton" Content="&#xE13A;"></Button>
                <Button x:ConnectionId='12' Style="{StaticResource HoverButtonStyle}" x:Name="VideoButton" Content="&#xE714;"></Button>
                <Button x:ConnectionId='13' Style="{StaticResource HoverButtonStyle}" x:Name="MessageButton" Content="&#xE134;"></Button>
                <Button x:ConnectionId='14' Style="{StaticResource HoverButtonStyle}" x:Name="InfoButton" Content="&#xE171;"                         ></Button>
