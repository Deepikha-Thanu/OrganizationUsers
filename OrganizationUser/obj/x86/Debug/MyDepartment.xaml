<Page x:ConnectionId='1'
    x:Class="OrganizationUser.MyDepartment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OrganizationUser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:OrganizationUser.Model"
    mc:Ignorable="d"
    Background="{ThemeResource SystemBaseLowColor}">

    <Grid>
        <GridView x:ConnectionId='2' Name="MyDepartmentGridView"                                                  Margin="10" SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate                         >
                    <Grid x:ConnectionId='4' Name="MyDepartmentGrid" Background="{ThemeResource SystemRevealAltMediumHighColor}" Width="200" Height="210" Margin="10"                                                                                                >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Rectangle x:ConnectionId='5' Fill="Transparent" Grid.Row="0" Grid.RowSpan="4"                                  Canvas.ZIndex="20"></Rectangle>
                        <Image x:ConnectionId='6' Canvas.ZIndex="10"                                        Width="100" Height="100" Margin="0,10,0,0"></Image>
                        <Grid  Grid.Row="1" Canvas.ZIndex="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='15' TextTrimming="CharacterEllipsis" FontSize="18" FontWeight="Black"                                      Margin="10,0,10,0" HorizontalAlignment="Left"></TextBlock>
                            <Ellipse VerticalAlignment="Center" Grid.Column="1" Fill="Gray" Height="5" Width="5" Margin="10,0,0,0"></Ellipse>
                            <TextBlock x:ConnectionId='16' VerticalAlignment="Center" Grid.Column="2" Name="StatusText"                                                FontSize="16" Foreground="LimeGreen" FontWeight="SemiBold" Margin="10,0,10,0"></TextBlock>
                        </Grid>
                        <TextBlock x:ConnectionId='7' Canvas.ZIndex="10" TextTrimming="CharacterEllipsis" Grid.Row="2" FontSize="14"                                      Margin="7,0,7,10"></TextBlock>
                        <TextBlock x:ConnectionId='8' Canvas.ZIndex="10" TextTrimming="CharacterEllipsis" Name="DepartmentText" Grid.Row="3" FontSize="16"                                         Margin="7,0,7,0"></TextBlock>
                        <TextBlock x:ConnectionId='9' Canvas.ZIndex="10" TextTrimming="CharacterEllipsis" Name="DesignationText" Grid.Row="4" FontSize="14"                                         Margin="7,0,7,7"></TextBlock>
                        <StackPanel Name="TaskStackPanel" Orientation="Horizontal" Grid.Row="3" Grid.RowSpan="2" Visibility="Collapsed" Background="{ThemeResource SystemChromeMediumColor}">
                            <Button Name="CallButton" FontFamily="Segoe MDL2 Assets" FontSize="14" Content="&#xE13A;" Margin="10,10,0,10"></Button>
                            <Button Name="VideoButton" FontFamily="Segoe MDL2 Assets" FontSize="14" Content="&#xE714;" Margin="10,10,0,10"></Button>
                            <Button Name="MessageButton" FontFamily="Segoe MDL2 Assets" FontSize="14" Content="&#xE134;" Margin="10,10,0,10"></Button>
                            <Button x:ConnectionId='14' Name="InfoButton" FontFamily="Segoe MDL2 Assets" FontSize="14" Content="&#xE171;" Margin="10,10,0,10"                         ></Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

