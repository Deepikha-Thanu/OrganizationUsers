<Page
    x:Class="OrganizationUser.AllUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OrganizationUser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:OrganizationUser.Model"
    mc:Ignorable="d"
    Background="{ThemeResource SystemBaseLowColor}">
    <Grid>
        <TextBlock x:Name="SearchResult" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" FontSize="20"></TextBlock>
        <GridView Name="AllUserGridView" ItemsSource="{x:Bind Peoples,Mode=OneWay}" Margin="10" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent" SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate  x:Name="AllDataTemplate" x:DataType="data:People">
                    <local:OrgUserControl x:Name="OrgUsersUC" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="OrgUserControl_Loaded" Margin="20"></local:OrgUserControl>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
